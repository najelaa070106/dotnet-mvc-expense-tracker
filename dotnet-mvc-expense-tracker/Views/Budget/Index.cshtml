@model IEnumerable<dotnet_mvc_expense_tracker.Models.Budget>
@{
    ViewData["Title"] = "Budget";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Master Data Budget</h2>
<a href="/Budget/Create" class="btn btn-primary mb-3">Tambah Budget</a>

<table id="budgetTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Kategori</th>
            <th>Nama</th>
            <th>Total Budget</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KategoriId</td>
                <td>@item.Nama</td>
                <td>@item.TotalBudget</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    <a href="/Budget/Details/@item.Id" class="btn btn-info btn-sm">Lihat</a>
                    <a href="/Budget/Edit/@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Budget/Delete/@item.Id" class="btn btn-danger btn-sm">Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(function () {
            $("#budgetTable").DataTable();
        });
    </script>
}
